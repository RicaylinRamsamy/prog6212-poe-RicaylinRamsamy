@page
@model Time_Management.Pages.AcademicSemesterPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-3">
    <h1 class="text-primary">Edit</h1>

    <h4 class="text-success">Academic Semester</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AcademicSemester.SemesterId" />
                <div class="form-group">
                    <label asp-for="AcademicSemester.SemesterName" class="control-label text-success"></label>
                    <input asp-for="AcademicSemester.SemesterName" class="form-control" />
                    <span asp-validation-for="AcademicSemester.SemesterName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AcademicSemester.SemesterStartDate" class="control-label text-success"></label>
                    <input asp-for="AcademicSemester.SemesterStartDate" class="form-control" />
                    <span asp-validation-for="AcademicSemester.SemesterStartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AcademicSemester.SemesterNumWeeks" class="control-label text-success"></label>
                    <input asp-for="AcademicSemester.SemesterNumWeeks" class="form-control" />
                    <span asp-validation-for="AcademicSemester.SemesterNumWeeks" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index" class="btn btn-success">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
